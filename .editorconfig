# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Set default charset
[*.{js,ts}]
charset = utf-8

# space indentation
[*.{js,json,ts}]
indent_style = space
indent_size = 2
